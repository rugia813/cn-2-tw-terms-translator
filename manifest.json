{
    "name": "中台軟工技術用語轉換器",
    "version": "1.0",
    "description": "翻譯中國用語為台灣用語",
    "author": "rugia813",
    "icons": { 
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
     "128": "icons/icon128.png" 
    },
    "content_scripts": [
      {
        "matches": ["*://*/*"],
        "js": [
          "patch-worker.js",
          "main.js"
        ]
      }
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": true
    },
    "web_accessible_resources": ["worker.js"],
    "permissions": ["contextMenus","activeTab", "tabs"],
    "manifest_version": 2
  }