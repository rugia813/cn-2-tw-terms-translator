{
    "name": "中台用語轉換器",
    "version": "1.0",
    "description": "翻譯中國用語為台灣用語",
    "content_scripts": [
      {
        "matches": ["*://*/*"],
        "js": [
          "patch-worker.js",
          "main.js"
        ]
      }
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": true
    },
    "web_accessible_resources": ["worker.js"],
    "permissions": ["contextMenus","activeTab", "tabs"],
    "manifest_version": 2
  }