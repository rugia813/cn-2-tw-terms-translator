{
    "name": "中台軟工技術用語翻譯",
    "version": "1.0",
    "description": "翻譯中國用語為台灣用語",
    "author": "rugia813",
    "icons": { 
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png" 
    },
    "page_action": {
      "default_title": "中台軟工技術用語翻譯", 
      "default_icon": "icons/icon-inactive16.png"
    },
    "content_scripts": [
      {
        "matches": ["http://*/*", "https://*/*"],
        "exclude_matches": ["https://www.youtube.com/"],
        "js": [
          "patch-worker.js",
          "main.js"
        ]
      }
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": true
    },
    "web_accessible_resources": ["worker.js"],
    "permissions": ["contextMenus", "storage"],
    "manifest_version": 2
  }